<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.quicktext" path="/org/gnome/shell/extensions/quicktext/">
        <key name="quick-hotkey" type="as">
            <default><![CDATA[['<Ctrl><Super>i']]]></default>
            <summary>Hotkey to open the cool stuff.</summary>
        </key>
        <key name="quick-filepath" type="s">
            <default>"/path/to/document.txt"</default>
            <summary>Filepath to store the cool stuff.</summary>
        </key>
        <key name="quick-pendlocation" type="s">
            <choices>
              <choice value='BEG'/>
              <choice value='END'/>
            </choices>
            <default>'BEG'</default>
            <summary>Where to add the cool stuff.</summary>
        </key>
        <key name="quick-append" type="s">
            <default>"-----"</default>
            <summary>What to add after the cool stuff.</summary>
        </key>
        <key name="quick-prepend" type="s">
            <default>""</default>
            <summary>What to add before the cool stuff.</summary>
        </key>
        <key name="quick-multiline" type="b">
            <default>false</default>
            <summary>Whether to use multi-line input.</summary>
        </key>
    </schema>
</schemalist>
